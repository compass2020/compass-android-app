<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bluetooth.BLECheckConnection">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/HeaderTextStyle"
        android:paddingRight="@dimen/main_card_text_margin"
        android:paddingLeft="@dimen/main_card_text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/test_connection_status"
        />

</androidx.constraintlayout.widget.ConstraintLayout>